{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 144
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noForEach": "off"
      }
    }
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": ["dist", "src/__tests__"]
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "asNeeded"
    }
  }
}
